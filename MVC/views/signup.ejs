        <div class="sign">
            <a href="/signin" class="sign-in">SIGN IN</a>
            <a href="/signup" class="sign-up">SIGN UP</a>
        </div>
    </nav>
<main class="signPage">
    <h1>
        SIGN UP
    </h1>
   <form action="/signup" method="POST">
<div class="formItem">
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" placeholder="Email">
</div>
<div class="formItem">
    <label for="pass">Password:</label>
    <input type="password" id="pass" name="password1" placeholder="Password">
</div>
<div class="formItem">
    <label for="re-pass">Re-enter Password:</label>
    <input type="password" id="re-pass" name="password2" placeholder="Password">
</div>
<div class="formItem formButtons">
   <button type="submit">SIGN UP</button>
   <a href="/">CANCEL</a>
</div>
   </form>
    
</main>
